<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="temperature" />

        <TextView
            android:id="@+id/Humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Humidity" />

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/xd"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:arc_bottom_text="Temperature"
            app:arc_bottom_text_size="23dp"
            app:arc_finished_color="#03A9F4"
            app:arc_max="100"
            app:arc_progress="25"
            app:arc_suffix_text="CÂ°"
            app:arc_suffix_text_padding="1dp"
            app:arc_suffix_text_size="24dp"
            app:arc_text_color="@color/teal_200"


            app:arc_unfinished_color="@color/white" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>